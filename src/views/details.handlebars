<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Product Details</title>
    <!-- Bootstrap CSS -->
    <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet">
    <!-- Font Awesome for icons -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css">
    <!-- Custom styles -->
    <style>
        body {
            font-family: Arial, sans-serif;
            background-color: #f5f5f5;
        }
        .container {
            max-width: 800px;
            margin: 40px auto;
        }
        .card {
            border: none;
            box-shadow: 0 0 20px rgba(0, 0, 0, 0.1);
        }
        .card-header {
            background-color: #3483fa;
            color: white;
            padding: 10px 20px;
            border-bottom: 1px solid #ddd;
        }
        .card-title {
            font-size: 24px;
            font-weight: bold; /* Negrita */
        }
        .card-body {
            padding: 20px;
        }
        .product-image {
            width: 100%;
            max-height: 300px;
            object-fit: contain;
            border-radius: 5px;
            border: 1px solid #ddd;
        }
        .product-title {
            font-size: 20px;
            font-weight: bold; /* Negrita */
            margin-bottom: 10px;
        }
        .product-details {
            margin-bottom: 20px;
        }
        .product-details p {
            margin-bottom: 5px;
        }
        .product-price {
            font-size: 18px;
            font-weight: bold;
            color: #3483fa;
        }
        .btn-add-to-cart {
            background-color: #3483fa;
            color: white;
            border: none;
            padding: 10px 20px;
            border-radius: 5px;
            cursor: pointer;
            font-weight: bold; /* Negrita */
        }
        .btn-add-to-cart:hover {
            background-color: #1a73e8;
        }
        .btn-back {
            background-color: #f5f5f5;
            color: #555;
            border: 1px solid #ddd;
            padding: 10px 20px;
            border-radius: 5px;
            cursor: pointer;
            font-weight: bold; /* Negrita */
        }
        .btn-back:hover {
            background-color: #ddd;
        }
    </style>
</head>
<body>
    <div class="container">
        <div class="card">
            <div class="card-header">
                <h2 class="card-title mb-0">{{product.title}}</h2>
            </div>
            <div class="card-body">
                <div class="row">
                    <div class="col-md-6">
                        <img src="{{product.thumbnail}}" alt="{{product.title}}" class="product-image">
                    </div>
                    <div class="col-md-6">
                        <div class="product-details">
                            <h4 class="product-title">{{product.title}}</h4>
                            <p><strong>Description:</strong> {{product.description}}</p>
                            <p><strong>Price:</strong> <span class="product-price">${{product.price}}</span></p>
                            <p><strong>Category:</strong> {{product.category}}</p>
                            <p><strong>Stock:</strong> {{product.stock}}</p>
                            <p><strong>Code:</strong> {{product.code}}</p>
                        </div>
                        <button class="btn btn-add-to-cart" onclick="addToCart('{{product._id}}', {{product.stock}})">
                            <i class="fas fa-cart-plus"></i> Agregar al Carrito
                        </button>
                        <button class="btn btn-back ml-2" onclick="window.history.back();">
                            <i class="fas fa-arrow-left"></i> Volver
                        </button>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Bootstrap JS and Font Awesome JS -->
    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.5.3/dist/umd/popper.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/js/all.min.js"></script>

    <!-- SweetAlert2 for nicer alerts -->
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>

    <script>
        let cart;

        async function addToCart(productId, stock) {
            const { value: quantity } = await Swal.fire({
                title: 'Add quantity',
                input: 'number',
                inputAttributes: {
                    autocapitalize: 'off',
                    min: 1,
                    max: stock
                },
                showCancelButton: true,
                confirmButtonText: 'Confirm',
            });

            if (quantity) {
                try {
                    const response = await fetch(`/api/carts/${cart._id}/products/${productId}`, {
                        method: 'POST',
                        headers: {
                            'Content-Type': 'application/json',
                        },
                        body: JSON.stringify({ "productId": productId, "quantity": quantity }),
                    });
                    if (response.ok) {
                        const data = await response.json();
                        Swal.fire({
                            title: 'Product added successfully',
                            text: `ID: ${productId} - Quantity: ${quantity}`,
                            icon: 'success',
                        });
                    } else {
                        Swal.fire({
                            title: 'Error',
                            text: 'There was an error adding the product to the cart',
                            icon: 'error',
                        });
                    }
                } catch (error) {
                    console.error('Error adding product to cart:', error);
                    Swal.fire({
                        title: 'Error',
                        text: 'There was an error adding the product to the cart',
                        icon: 'error',
                    });
                }
            }
        }
    </script>
</body>
</html>
